Cell[TextData[{
 "The Hodge star operator *, in an n-dimensional manifold is a map from \
p-forms to (n \[Minus] p)-forms given by:\n\t",
 Cell[BoxData[
  FormBox[
   RowBox[{"(*", 
    RowBox[{
     RowBox[{
      SubscriptBox[
       RowBox[{"w", ")"}], 
       RowBox[{
        SubscriptBox["\[Mu]", "1"], "\[Ellipsis]", " ", 
        SubscriptBox["\[Mu]", 
         RowBox[{"n", "-", "p"}]]}]], "\[Congruent]", 
      RowBox[{
       FractionBox["1", 
        RowBox[{"p", "!"}]], 
       SqrtBox[
        RowBox[{"|", "g", "|"}]], 
       SubscriptBox["\[Epsilon]", 
        RowBox[{
         SubscriptBox["\[Mu]", "1"], "\[Ellipsis]", " ", 
         SubscriptBox["\[Mu]", 
          RowBox[{"n", "-", "p", " "}]], 
         SubscriptBox["\[Mu]", 
          RowBox[{"n", "-", "p", "+", "1"}]], 
         SubscriptBox["\[Ellipsis]\[Mu]", "n"]}]], " ", 
       SuperscriptBox["g", 
        RowBox[{
         SubscriptBox["\[Mu]", 
          RowBox[{"n", "-", "p", "+", "1"}]], " ", 
         SubscriptBox["\[Nu]", "1"]}]], "\[Ellipsis]", " ", 
       SuperscriptBox["g", 
        RowBox[{
         SubscriptBox["\[Mu]", "n"], " ", 
         SubscriptBox["\[Nu]", "p"]}]], " ", 
       SubscriptBox["w", 
        RowBox[{
         SubscriptBox["\[Nu]", "1"], 
         SubscriptBox["\[Ellipsis]\[Nu]", "p"]}]]}]}], ",", " ", 
     RowBox[{
      RowBox[{"where", " ", 
       SubscriptBox["\[Epsilon]", 
        RowBox[{
         RowBox[{"123", "..."}], "n"}]]}], " ", "=", " ", "1"}]}]}], 
   TraditionalForm]]]
}], "Text",
